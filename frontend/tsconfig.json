{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "src/ows-lib/OwsContext/tests/.spec.ts",
    "src/ows-lib/XMLParser/tests/.spec.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "src/vite-env.d.ts",
    "vite.config.mjs",
    "__tests__"
  ]
}